ScreenManager:
	MyGrid:
	WrongPage:

<MyGrid>
	
	name: "mygrid"
	BoxLayout:
		orientation: 'vertical'
		
		padding:5
		spacing: 50

		Label:
			text : "0"
			id : score
			font_size: 40
			size_hint: (None,None)
			width: 200
			height: 200
			pos_hint: {"center_x":.5,"top":.9}
			color:(0,0,0,1)
			background_color : (232/255,226/255,83/255,1)
			canvas.before:
				Color:
					rgba: self.background_color
				Rectangle:
					size: self.size
					pos: self.pos

		Label:
			text : "Guess a Number \n between 1-100"
			id : gridlabel
			font_size: 18
			size_hint: (.7,None)
			height: 100
			pos_hint: {"center_x":.5,"center_y":.1}
			color:(0,0,0,1)
			background_color : (232/255,226/255,83/255,1)
			canvas.before:
				Color:
					rgba: self.background_color
				Rectangle:
					size: self.size
					pos: self.pos

		TextInput:
			id: number
			text :""
			input_type: 'number'
			input_filter: 'int'
			font_size:40
			size_hint: (None,None)
			width: 150
			height: 50
			pos_hint:{"center_x":.5,"center_y":.3}
			background_color: (226/255,223/255,167/255,1)
			multiline: False
		Button:
			text: "Try"
			on_press: root.btn()
			font_size:28
			paddng:10
			size_hint: (None,None)
			width: 150
			height: 50
			pos_hint:{"center_x":.5,"center_y":.1}
			background_color: (226/255,223/255,167/255,1)
<Label>:
	font_size: 22
	size_hint: (.5,None)
	height: 100
	pos_hint: {"center_x":.5,"top":.8}
	color:(0,0,0,1)
	background_color : (232/255,226/255,83/255,1)
	canvas.before:
		Color:
			rgba: self.background_color
		Rectangle:
			size: self.size
			pos: self.pos

<WrongPage>
	size : root.width, root.height
	name: "wrongpage"
	id: "rlabel"

	Label:
		id: "label"
		text: "Congrats!"
		font_size: 25
		size_hint: (.7,None)
		height: 100
		pos_hint: {"center_x":.5,"top":.5}
		color:(0,0,0,1)
		background_color : (232/255,226/255,83/255,1)
		canvas.before:
			Color:
				rgba: self.background_color
			Rectangle:
				size: self.size
				pos: self.pos
	Button:
		text :"Again"
		font_size: 25
		size_hint: (None,None)
		height: 100
		width: 200
		pos_hint: {"center_x":.5,"bottom":.8}
		on_press: root.reset_btn()


